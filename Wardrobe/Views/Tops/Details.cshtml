@model Wardrobe.Models.Top

@{
    ViewBag.Title = "Top Details";
    PageData["Title"] = ViewBag.Title;
    PageData["Name"] = (Model.Name);
    PageData["ID"] = (Model.TopID);
}
@RenderPage("~/Views/Shared/_DetailHeader.cshtml")

<div>

    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <img src="@Url.Content(@Model.Photo)" class="img-responsive detail" alt ="No Image" />
            </div>
            <div class="col-sm-4">
                <dl class="dl-horizontal">
                    
                    <dt>
                        @Html.DisplayNameFor(model => model.Sleave)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Sleave)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Neckline)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Neckline)
                        <br/><br/>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.PrimaryColor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PrimaryColor)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SecondaryColor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SecondaryColor)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Pattern)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Pattern)
                        <br /><br />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Season)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Season)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Occasion)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Occasion)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
@RenderPage("~/Views/Shared/_DetailFooter.cshtml")

